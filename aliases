# Aliases.
alias mkd='mkdir -pv'
alias lst='ls -lAh'

# Function to set correct project permissions.
function pimcore-set-rights() {
    sudo find . -type d -exec chmod 775 {} \;
    sudo find . -type f -exec chmod 664 {} \;
}

# Shorthand function to clear all Pimcore caches.
function pimcore-clear-cache() {
    php bin/console cache:clear
    php bin/console pimcore:cache:clear
}

# Ensure the group write permissions.
umask 0002
